@namespace MatBlazor


<MatDialogContent>
    @Message
</MatDialogContent>

<MatDialogActions>
    <MatButton OnClick="@(_=>DialogReference.Close(true))">OK</MatButton>
    <MatButton OnClick="@(_=>DialogReference.Close(false))">Cancel</MatButton>
</MatDialogActions>

@code
{
    [CascadingParameter]
    public MatDialogReference DialogReference { get; set; }

    [Parameter]
    public string Message { get; set; }
}