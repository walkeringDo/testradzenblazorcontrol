@page "/line/line1"
@using Rakor.Blazor.ECharts.Option
@using Rakor.Blazor.ECharts.Option.Enum
@using Rakor.Blazor.ECharts.Option.Series.Line

<div class="container">
    <ECLine Option="@Option1" Class="chart-normal"></ECLine>
    <ECLine Option="@Option2" Class="chart-normal"></ECLine>
    <ECLine Option="@Option3" Class="chart-normal"></ECLine>
</div>

@code{
    private EChartsOption<Line> Option1;
    private EChartsOption<Line> Option2;
    private EChartsOption<Line> Option3;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Option1 = new EChartsOption<Line>()
        {
            Title = new Title()
            {
                Text = "折线图"
            },
            YAxis = new List<YAxis>()
{
                new YAxis()
                {
                    Type = AxisType.Value
                }
            },
            XAxis = new List<XAxis>()
            {
                new XAxis()
                {
                    Type = AxisType.Category,
                    Data = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" }
                }
            },
            Series = new List<object>() {
                new Line()
                {
                    Type = "line",
                    Data = new[] { 820, 932, 901, 934, 1290, 1330, 1320 }
                }
            }
        };
        Option2 = new EChartsOption<Line>()
        {
            Title = new Title()
            {
                Text = "区域图"
            },
            YAxis = new List<YAxis>()
{
                new YAxis()
                {
                    Type = AxisType.Value
                }
            },
            XAxis = new List<XAxis>() 
            {
                new XAxis()
                {
                    Type = AxisType.Category,
                    Data = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" },
                    BoundaryGap = false
                }
            },
            Series = new List<object>() {
                new Line()
                {
                    Type = "line",
                    Data = new[] { 820, 932, 901, 934, 1290, 1330, 1320 },
                    AreaStyle = new AreaStyle()
                }
            }
        };
        Option3 = new EChartsOption<Line>()
        {
            Title = new Title()
            {
                Text = "平滑折线图"
            },
            YAxis = new List<YAxis>()
{
                new YAxis()
                {
                    Type = AxisType.Value
                }
            },
            XAxis = new List<XAxis>()
            {
                new XAxis()
                {
                    Type = AxisType.Category,
                    Data = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" }
                }
            },
            Series = new List<object>() {
                new Line()
                {
                    Type = "line",
                    Data = new[] { 820, 932, 901, 934, 1290, 1330, 1320 },
                    Smooth = true
                }
            }
        };
    }
}